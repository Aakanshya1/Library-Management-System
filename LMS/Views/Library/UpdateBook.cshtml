@model UpdateBookViewModel;

<h2 class="my-4">Update books</h2>

@using (Html.BeginForm("UpdateBook", "Library", FormMethod.Post, new { @class = "needs-validation", enctype = "multipart/form-data", novalidate = "novalidate" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.BookId)

    <div class="form-group mb-3 w-25">
        @Html.LabelFor(model => model.Title, new { @class = "form-label" })
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Title" })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>



    <div class="form-group mb-3">
        @Html.LabelFor(model => model.ImageUrl, new { @class = "form-label" })
        @Html.EditorFor(model => model.ImageUrl, new { @class = "form-control", placeholder = "ImageUrl" })
    </div>

    <div class="form-group mb-3">
        @Html.LabelFor(model => model.Description, new { @class = "form-label" })
        @Html.EditorFor(model => model.Description, new { @class = "form-control", placeholder = "Description" })
    </div>
    <div class="form-group mb-3">
        @Html.LabelFor(model => model.Author, new { @class = "form-label" })
        @Html.EditorFor(model => model.Author, new { @class = "form-control", placeholder = "Author" })
    </div>

    <button type="submit" class="btn btn-primary">Update Button</button>
}

